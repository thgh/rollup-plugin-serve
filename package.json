{
  "name": "rollup-plugin-serve",
  "version": "3.0.1",
  "description": "Serve your rolled up bundle",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "exports": {
    "types": "./index.d.ts",
    "import": "./dist/index.mjs",
    "default": "./dist/index.cjs"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "fix": "prettier --write .",
    "prepare": "yarn fix && yarn build",
    "test": "cd test && rollup -cw || cd .."
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "serve",
    "dev-server",
    "static"
  ],
  "license": "MIT",
  "author": "Thomas Ghysels <info@thomasg.be>",
  "homepage": "https://github.com/thgh/rollup-plugin-serve",
  "bugs": {
    "url": "https://github.com/thgh/rollup-plugin-serve/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thgh/rollup-plugin-serve"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "type": "module",
  "dependencies": {
    "compression": "^1.8.1",
    "connect-history-api-fallback": "^2.0.0",
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.5",
    "killable": "^1.0.1",
    "mime": "^4",
    "opener": "1",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^1.0.0",
    "@types/node": "^20.10.1",
    "prettier": "^3",
    "rollup": "4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "printWidth": 120
  }
}
